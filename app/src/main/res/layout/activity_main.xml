<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.hayato.androidkotlinlearn.MainActivity">

    <TextView
            android:text="@string/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title_text" android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:textAlignment="center" android:textSize="18sp"/>

    <Button
        android:id="@+id/move_jyanken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_jyanken"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />
</android.support.constraint.ConstraintLayout>
